{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",       // Ensure compiled files go to "dist/"
    "rootDir": "src",       // Ensure TypeScript only compiles "src"
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src"],       // Ensure only "src" is compiled
  "exclude": ["node_modules", "dist"]  // Prevent "dist" from being compiled
}
